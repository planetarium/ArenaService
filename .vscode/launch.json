{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug ArenaService",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build",
            "program": "${workspaceFolder}/ArenaService/bin/Debug/net8.0/ArenaService.dll",
            "cwd": "${workspaceFolder}/ArenaService",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Local"
            }
        },
        {
            "name": "Debug ArenaService.BackOffice",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "build-backoffice",
            "program": "${workspaceFolder}/ArenaService.BackOffice/bin/Debug/net8.0/ArenaService.BackOffice.dll",
            "cwd": "${workspaceFolder}/ArenaService.BackOffice",
            "stopAtEntry": false,
            "env": {
                "ASPNETCORE_ENVIRONMENT": "Development"
            }
        }
    ]
} 